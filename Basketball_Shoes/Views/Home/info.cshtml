@model Basketball_Shoes.Models.Product
@{
    Layout = null;
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giày bóng rổ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="css/style.css" />
</head>
<body>
    <!-- <header></header> -->
    <div class="container">
        <div class="row">
            <div class="col-2">
                <img class="mt-2"
                     style="width: 80px"
                     src="/images/3-logo-jordan.webp"
                     alt="" />
                <p class="fs-6" style="font-weight: bold">BasketballShoes</p>
            </div>
            <div class="col-5 mt-5 rounded-circle">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Search" />
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </div>
            <div class="col-2 mt-4">
                <a asp-controller="Home" asp-action="cart" class="text-warning">
                    <i class="bi bi-cart" style="font-size: 45px"></i>
                </a>
            </div>
            <div class="col-3 mt-5 text-end">
                <a asp-controller="Home" asp-action="login" class="btn btn-success">Đăng nhập</a>
                <a asp-controller="Home" asp-action="register" class="btn btn-primary">Đăng kí</a>

            </div>
        </div>
    </div>
    <div class="container-fluid bg-light p-3 d-flex justify-content-around">
        <a asp-controller="Home" asp-action="index" style="text-decoration: none" class="text-dark">Trang chủ</a>
        <a asp-controller="Home" asp-action="product" style="text-decoration: none" class="text-dark">Sản phẩm</a>
    </div>
    <div class="container mt-5">
        <div class="row">
            
                <div class="col-6">
                    <img src="@Url.Content(Model.thumbnail)"
                         alt=""
                         style="width: 500px" />
                </div>
                <div class="col-6">
                    <span class="fw-bold">
                        @Model.description
                    </span>
                    <p class="text-muted">Mã SP : DO9679-600</p>
                    <div class="text-danger fs-2">
                        <span class="">@Model.sale</span><span>đ</span>
                    </div>
                    <p class="text-muted">Giá cũ: <del>@Model.price</del><del>đ</del></p>
                    <p>Chọn size của bạn:</p>
                    <div class="btn-group"
                         role="group"
                         aria-label="Basic radio toggle button group">
                        <input type="radio"
                               class="btn-check"
                               name="btnradio"
                               id="btnradio1"
                               autocomplete="off"
                               checked />
                        <label class="btn btn-outline-primary" for="btnradio1">40</label>

                        <input type="radio"
                               class="btn-check"
                               name="btnradio"
                               id="btnradio2"
                               autocomplete="off" />
                        <label class="btn btn-outline-primary" for="btnradio2">41</label>

                        <input type="radio"
                               class="btn-check"
                               name="btnradio"
                               id="btnradio3"
                               autocomplete="off" />
                        <label class="btn btn-outline-primary" for="btnradio3">42</label>
                    </div>
                    <p class="mt-3 fw-bold fs-4 text-muted">
                        COD - Giao hàng thanh toán tận nhà - được mở xem hàng trước khi
                        thanh toán.
                    </p>
                    <p>Số lượng:</p>
                    <div class="input-group flex-nowrap">
                        <input type="text"
                               class="form-control"
                               placeholder="Nhập số lượng"
                               aria-label=""
                               aria-describedby="addon-wrapping" />
                    </div>
                    <a asp-controller="Home" asp-action="checkout" class="mt-4 p-3 fs-5 fw-bold btn btn-success float-end">
                        Mua ngay
                    </a>
                </div>
            
        </div>
    </div>
    <div class="mt-5 bg-secondary">
        <div class="container">
            <div class="row">
                <div class="col-4">
                    <img class="mt-4 bg-secondary text-center"
                         style="width: 150px; margin-left: 20px"
                         src="/images/3-logo-jordan.webp"
                         alt="" />
                    <p class="fs-3" style="font-weight: bold">BasketballShoes</p>
                </div>
                <div class="col-8">
                    <p class="fw-bold fs-2 text-white text-center mt-4">
                        BASKETBALLSHOES-GIÀY BÓNG RỔ LIMITED
                    </p>
                    <p class="fw-bold text-white text-center">
                        Địa chỉ:Số 1 ngõ 1 Cầu Giấy,Hà Nội
                    </p>
                    <p class="fw-bold text-white text-center">Tel: 0123456789</p>
                </div>
            </div>
        </div>
    </div>
    </body>
    </html>