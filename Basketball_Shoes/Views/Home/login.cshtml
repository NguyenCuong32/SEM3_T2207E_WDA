@{
	Layout = null;
	ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Đăng Nhập</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
</head>
<div class="container-fluid">
	<div class="row justify-content-around ">
		<form class="col-md-3 bg-white p-3 py-3 my-3 rounded-3" asp-action="login" method="post" id="form-signin">
			<div class="form-group mt-3 ">
				<label for="fullname" class="fw-bold my-1">TÀI KHOẢN</label>
				<input placeholder="Tài khoản" type="text" name="username" id="username" class="form-control border-primary">
			</div>

			<div class="form-group">
				<label for="password" class="fw-bold my-1">MẬT KHẨU</label>
				<div class="col-sm-12">
					<input placeholder="Mật khẩu" type="password" name="password" id="password" class="form-control border-primary">
				</div>

			</div>
			<div class="form-check my-3">
				<input type="checkbox" class="form-check-input" id="remember" value="1" name="remember"> <label class="form-check-label" for="remember">Ghi nhớ tài khoản</label>
			</div>
			<div class="text-center mt-4">
				<button type="submit" class="btn btn-primary w-100" id="signin">ĐĂNG NHẬP</button>
			</div>
			<div class="d-flex justify-content-between mt-4">
				<small>Quên mật khẩu?</small>
				<small>Chưa có tài khoản? <a asp-controller="Home" asp-action="register" class="">Đăng kí</a></small>
			</div>
		</form>
	</div>
</div>
