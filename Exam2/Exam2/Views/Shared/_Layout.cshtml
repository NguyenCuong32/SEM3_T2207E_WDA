<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Exam2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Exam2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="sidebar sidebar-active">
            <div class="sidebar-content">
                <h2>MOTION STATION</h2>
                <select class="form-control">
                    <option value="0" disabled="disabled">Choose Language</option>
                    <option value="1">English</option>
                    <option value="2">Korean</option>
                    <option value="3">Vietnamese</option>
                    <option value="4">Japanese</option>
                </select>
                <ul class="list-group">
                    <li class="list-group-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="~/assets/Group 398.svg" alt="Dashboard">
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="list-group-item line-bottom"></li>
                    <li class="list-group-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">
                            <img src="~/assets/Group 400.svg" alt="Products">
                            <span>Products</span>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Authors" asp-action="Index">
                            <img src="~/assets/Group 400.svg" alt="Authors">
                            <span>Authors</span>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Index">
                            <img src="~/assets/Group 400.svg" alt="Categories">
                            <span>Categories</span>
                        </a>
                    </li>
                    <li class="list-group-item line-top"></li>
                    <li class="list-group-item">
                        <h6>IMAGES THAT COMES TO LIFE</h6>
                    </li>
                    <li class="list-group-item social-network">
                        <a href="#" class="icon">
                            <img class="facebook" src="~/assets/facebook.svg" alt="Facebook">
                        </a>
                        <a href="#" class="icon">
                            <img class="instagram" src="~/assets/instagram.svg" alt="Instagram">
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
