@model Sem3.StudentManage.Models.StudentModel

@{
    ViewData["Title"] = "Xoá sinh viên";
}

<h3>Bạn có chắc chắn muốn xoá sinh viên này khỏi hệ thống?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd>
            @if (Model.Image != null && Model.Image.Length > 0)
            {
                var base64 = Model.Image;
                <img src="data:image;base64, @base64" width="64px" height="64px" style="border-radius: 50%;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
        @*<dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>*@
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="StudentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
