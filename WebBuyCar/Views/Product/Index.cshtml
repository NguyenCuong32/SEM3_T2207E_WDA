@model ProductModel

<!-- menu header -->

<div class="header-menu" style="border-bottom: 0.5px solid gray;">
    <div class="container" style="height: 100%;">
        <nav style="height: 100%;">
            <ul class="list-menu d-flex justify-content-between align-items-center " style="height: 100%;">
                <!-- list menu header -->
                <vc:menu-header></vc:menu-header>
            </ul>
        </nav>
    </div>
</div>


<!-- list cart -->
<div class="container">
    <div class="row">
        <ul class="d-flex mt-3">
                <li><a href="" class="text-decoration-none text-muted">@Model.Category.NameCategory</a></li>
                <i class="bi bi-chevron-right "></i>
                <li><a href="" class="text-decoration-none text-muted">@Model.NameCar</a></li>
        </ul>
    </div>
</div>


<!--  img car -->
<div class="container pt-4 pb-4">
    <div class="row">
            <div class="col-6">
                <div class="img" style="width: 650px; height: 450px;">
                    <img src="~/media/categories/@Model.Category.ImageCategory" alt="" style="width: 100%; height: 100%; object-fit: cover;">
                </div>
            </div>

            <div class="col-6">
                <div class="img" style="width: 650px; height: 450px;">
                    <img src="~/media/products/@Model.ImageProduct" alt="" style="width: 100%; height: 100%; object-fit: cover;">
                </div>
            </div>

    </div>
</div>


<!-- infor -->

<div class="container">
    <div class="row">
        <div class="col-8">
            <div class="infor-car d-flex justify-content-between pb-2" style="font-weight: 300; border-bottom: 1px solid gray;">
                <h3>@Model.NameCar</h3>
                <h3>$@Model.Price</h3>
            </div>
            <div class="infor-car  pb-2 pt-2" style="font-weight: 400; border-bottom: 1px solid gray;">
                <p class="pb-2">@Model.YearOfManufacture</p>
                <p class="text-muted pt-2">Year</p>
            </div>

            <div class="infor-car  pb-2 pt-2" style="font-weight: 400; border-bottom: 1px solid gray;">
                <p class="pb-2">About This Car</p>
                <p class="text-muted pt-2">@Model.Description</p>
            </div>
        </div>

        <!-- contact -->
        <div class="col-4">

            <div class="p-4" style="border-top: 1px solid gray;  border-right: 1px solid gray; border-left: 1px solid gray; ">
                <p class=" p-2">Contact agent</p>
                <p class=" p-2">Premier GT</p>
            </div>

            <div class="p-4" style="border:1px solid gray">
                <div class="input p-2">
                    <input class="w-100 p-2" type="text" value="" placeholder="Name" style="font-size: 16px; border: 1px solid gray; font-weight: 300;">
                </div>
                <div class="input p-2">
                    <input class="w-100 p-2" type="email" value="" placeholder="Email" style="font-size: 16px; border: 1px solid gray; font-weight: 300;">
                </div>
                <div class="input p-2">
                    <input class="w-100 p-2" type="number" value="" placeholder="Phone" style="font-size: 16px; border: 1px solid gray; font-weight: 300;">
                </div>
                <div class="input p-2">
                    <textarea class="w-100 p-2" type="text" value="" placeholder="Message" style="font-size: 16px; border: 1px solid gray; font-weight: 300;">From message </textarea>
                </div>
                <div class="submit p-2">
                    <button class="text-center w-100 bg-success p-3"><a class="text-white text-decoration-none" href="">SEND MESSAGE</a></button>
                </div>
            </div>
        </div>
    </div>
</div>