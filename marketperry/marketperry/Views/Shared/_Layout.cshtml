<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - MarketPerry</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/SoundPerry.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<body class="m-0" style="margin-top: 150px !important; background-color:#d0cece ">
<div class="bg-image-container"
     style="background-color: #d0cece; background-size: cover; background-position: center center;min-height: 100vh;">
    <header class=" position: fixed" style="position: fixed;
                                            top: 0;
                                            left: 0;
                                            width: 100%;
                                            z-index: 1000;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  bg-dark border-bottom box-shadow mb-3 ">
            <div class="container-fluid  ">
                <a class="navbar-brand fs-3" asp-area="" asp-controller="Home" asp-action="Index"
                   style="color:  #e85b05">
                    <img src="image/market.png" alt="" style="width: 50px;"> MarketPerry
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ">
                        <li class="nav-item me-2">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home"
                               asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="nav-item me-2">
                            <div class="dropdown">
                                <button class="btn btn-black dropdown-toggle text-white" type="text"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                    Producrts
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="AllProduct"
                                           asp-action="iphone">
                                            Iphone
                                        </a>

                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="AllProduct"
                                           asp-action="AppleWatch">
                                            Appwacth
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">AirPods</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">IOS 17</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                       @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                       {
                           <li class="nav-item">
                               <a class="nav-link text-white" href="/Admin">
                                   Admin
                               </a>
                           </li>
                       }
                        
                        <li class=" nav-item me-2">
                            <a class="nav-link text-white " style="width: 100px" asp-area="" asp-controller="Home"
                               asp-action="contact">
                                Contact
                            </a>
                        </li>

                    </ul>
                    <!-- Search-->
                    <div class="container ms-5">
                        <form asp-controller="Home" asp-action="Search" method="get">
                            <div class="input-group">
                                <div class="form-outline shadow-lg bg-body-tertiary rounded">
                                    <input type="search" id="query" name="query" class="form-control"
                                           placeholder="Search..." style="border-radius: 1.25em; width: 380px"/>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!--Account-->
                   @await Component.InvokeAsync("Cart");
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="container rounded col-md-3 ">

                            <span class="text-white">
                                @User.Identity.Name
                            </span>

                            <a asp-action="Logout" asp-controller="Account"
                               class="btn btn-danger float-end fw-bold ">
                                Logout
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="container rounded col-md-3 ">
                            <a asp-action="Register" asp-controller="Account"
                               class="btn btn-danger float-end fw-bold ">
                                Sign Up
                            </a>
                            <a asp-action="Login" asp-controller="Account"
                               class="btn btn-primary float-end me-3 fw-bold">
                                Login In
                            </a>
                        </div>
                    }


                </div>
            </div>
        </nav>
    </header>
    <div class="container "> 
        @RenderBody()
    </div>
</div>

