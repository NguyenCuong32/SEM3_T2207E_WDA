@model IEnumerable<marketperry.Models.AppleWatch>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

<div class="container mt-3">
    <h2>Hover Rows</h2>
    <p>The .table-hover class enables a hover state (grey background on mouse over) on table rows:</p>
    <a href="/Admin/AppleWatch/Create/">Create New</a>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Watch Name</th>
            <th>Status</th>
            <th>Price</th>
            <th>Thumbnali</th>
            <th>Config</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.WtachName</td>
                <td>@item.Status</td>
                <td>@item.Price</td>
                <td style="height:100px">
                    <img style="height:100%" src="@item.Thumbnail" />
                </td>
                <td>@item.Config</td>
                <td>
                    <a href="/Admin/AppleWatch/Edit/" class="btn btn-warning">Edit</a>
                    <a href="/Admin/AppleWatch/Details/">Details</a>
                    <a href="/Admin/AppleWatch/Delete/">Delete</a>
                </td>
            </tr>
        }

        </tbody>
    </table>

</div>

</body>
</html>