@model User;
@{
    var message = ViewBag.Message;
    var StatusCode = ViewBag.StatusCode.ToString();
}




<form action="/User/Edit/@Model.Username" method="post">
    <div>

        @if (!string.IsNullOrEmpty(message) && StatusCode != "200")
        {
            <div class="alert alert-danger">@message</div>
        }else
        {
            <div class="alert alert-success">@message</div>
        }

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Username: </label>
        <input type="text" class="form-control" id="Username" value="@Model.Username" name="Username" placeholder="Enter username" readonly>
    </div>
    <div class="form-group">
        <label for="fullName">Họ tên: </label>
        <input type="text" class="form-control" id="fullName" value="@Model.FullName" name="FullName" placeholder="Enter full name">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email: </label>
        <input type="email" class="form-control" id="Email" value="@Model.Email" name="Email" placeholder="Enter email">
    </div>
  
    <div class="form-group">
        <label>Avatar: </label>
        <input type="text" class="form-control" id="Avatar" value="@Model.Avatar" name="Avatar" placeholder="Enter avatar">
    </div>
    <div class="form-group">
        <label>Active: </label>
        <input type="checkbox" name="Active">

    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <a href="/User/UsersSystem" class="btn btn-secondary" data-dismiss="modal">Close</a>
    </div>
</form>