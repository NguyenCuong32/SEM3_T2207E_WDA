@model List<User>

@{
    var message = ViewBag.Message;
}

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-danger">@message</div>
}
<a class="btn btn-primary" href="/User/CreateUser">Thêm mới</a>


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th>
            <th scope="col">Họ tên</th>
            <th scope="col">Email</th>
            <th>Tác vụ</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i+1)</th>
                <td>@Model[i].Username</td>
                <td>@Model[i].FullName</td>
                <td>@Model[i].Email</td>
                <td>
                    <a class="btn btn-info" href="/User/Edit/@Model[i].Username">Sửa</a>
                    <a class="btn btn-danger" href="/User/DeleteUser/@Model[i].Username">Xóa</a>
                </td>
            </tr>

        }


    </tbody>
</table>




