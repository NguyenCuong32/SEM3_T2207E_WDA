@model IEnumerable<LSM.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Quản lý Sách</h1>

<p>
    <a asp-action="Create">Thêm mới sách</a>
</p>
<table id="example" class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                <p>Action</p>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.IdBook">Edit</a> |
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.IdBook">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdBook">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
